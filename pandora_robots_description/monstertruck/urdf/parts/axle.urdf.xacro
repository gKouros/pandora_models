<?xml version="1.0" ?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" >

  <xacro:macro name="axle" params="prefix_x reflect_x" >

    <!-- <joint name="${prefix_x}_base_axle_joint" type="fixed"> -->
      <!-- <parent link="base_link" /> -->
      <!-- <child link="${prefix_x}_axle_link" /> -->
      <!-- <origin xyz="${reflect_x*0.159+0.031} 0.0 -0.078" /> -->
    <!-- </joint> -->

<!-- ======================================================================= -->
<!-- ========= Experimental Suspension Approximation for simulation =========-->
<!-- ======================================================================= -->
    <joint name="${prefix_x}_base_axle_sim_suspension_joint" type="prismatic" >
      <parent link="base_link" />
      <child link="${prefix_x}_axle_sim_suspension_link" />
      <limit
        effort="${axle_z_joint_effort_limit}"
        velocity="${axle_z_joint_velocity_limit}"
        lower="${axle_z_joint_min_limit}"
        upper="${axle_z_joint_max_limit}" />
      <origin xyz="${reflect_x*0.158+0.031} 0.0 0.035"  rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
    </joint>

    <link name="${prefix_x}_axle_sim_suspension_link" >
      <xacro:solid_cylinder_intertial mass="0.00001" radius="0.001" y="0.1212" >
        <origin xyz="0.0 0.0 0.0"/>
      </xacro:solid_cylinder_intertial>
      <visual>
        <geometry>
          <cylinder radius="0.001" length="0.1212" />
        </geometry>
        <origin xyz="0.0 0.0 ${-0.1212/2}" />
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.001" length="0.1212" />
        </geometry>
        <origin xyz="0.0 0.0 ${-0.1212/2}" />
      </collision>
    </link>

    <joint name="${prefix_x}_axle_joint" type="revolute" >
      <parent link="${prefix_x}_axle_sim_suspension_link" />
      <child link="${prefix_x}_axle_link" />
      <limit
        effort="${axle_effort_limit}"
        velocity="${axle_velocity_limit}"
        lower="${axle_roll_joint_min_limit}"
        upper="${axle_roll_joint_max_limit}" />
      <origin xyz="0.0 0.0 -0.112"  rpy="0.0 0.0 0.0" />
      <axis xyz="1 0 0" />
    </joint>
<!-- ======================================================================= -->

    <link name="${prefix_x}_axle_link" >
      <inertial>
        <origin xyz="0.000288 -0.010863 0.073460" />
        <mass value="0.3" />
        <inertia ixx="0.00000004383" ixy="0.0"
          iyy="0.00000028948" iyz="0.0"
          izz="0.00000026930" ixz="0.0" />
      </inertial>
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${(1-reflect_x)*PI/2}" />
        <geometry>
          <mesh filename="package://pandora_robots_description/monstertruck/meshes/axle.dae" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${(1-reflect_x)*PI/2}" />
        <geometry>
          <mesh filename="package://pandora_robots_description/monstertruck/meshes/axle.stl" />
        </geometry>
      </collision>
      <collision_checking>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${(1-reflect_x)*PI/2}" />
        <geometry>
          <box size="0.0543 0.2153 0.0635" />
        </geometry>
      </collision_checking>
    </link>

  </xacro:macro>

</robot>
