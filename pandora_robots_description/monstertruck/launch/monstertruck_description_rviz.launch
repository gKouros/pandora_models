<launch>

  <!-- arguments -->
  <arg name="gui" default="true" />
  <arg name="rvizconfig" default="$(find pandora_robots_description)/monstertruck/config/urdf.rviz" />

  <!-- parameters -->
  <param name="use_gui" value="$(arg gui)" />
  <param name="robot_description" command="$(find xacro)/xacro.py $(find pandora_robots_description)/monstertruck/urdf/monstertruck.urdf.xacro" />

  <!-- nodes -->
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />

</launch>
