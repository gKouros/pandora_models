<?xml version="1.0" ?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" >

<!-- ###################################################################### -->

  <xacro:macro name="differential_joint">
               
    <joint name="differential_joint"
           type="revolute" >

      <parent link="base_link" />
      <child link="differential" />


      <origin xyz="-0.15841 0 0.09679"
              rpy="0 0 0"/>

      <axis xyz="1 0 0"/>
      <!-- ===============================================================  -->
      <limit lower="-0.78"
             upper="0.78"
             effort="150.0"
             velocity="150.0" />

    </joint>
    
  </xacro:macro>

<!-- ###################################################################### -->

</robot>

