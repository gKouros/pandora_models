<?xml version="1.0" ?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" >

  <xacro:include filename="$(find pandora_robots_description)/urdf/woody/properties/constants.xacro" />
  <xacro:include filename="$(find pandora_robots_description)/urdf/woody/properties/defaults.xacro" />

  <xacro:macro name="laser_caster"
               params="parent
                       fixed
                       roll_min_limit
                       roll_max_limit
                       pitch_min_limit
                       pitch_max_limit
                       *origin" >
    
    <!-- Links ############################################################ -->

    <link name="laser_roll_servo_link" >
      <xacro:solid_cuboid_inertial mass="0.057" x="0.041" y="0.050" z="0.035" >
        <origin xyz="0.00234 0.01566 -0.0002" />
      </xacro:solid_cuboid_inertial>
      <visual>
        <geometry>
          <mesh filename="package://pandora_sensors_description/meshes/laser/roll_servo_motor.dae" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.00165 0.0135 -0.0015"
                rpy="0 0 0" />
        <geometry>
          <box size="0.041 0.050 0.035" />
        </geometry>
      </collision>
    </link>

    <link name="laser_pitch_servo_link" >
      <xacro:solid_cuboid_inertial mass="0.057" x="0.035" y="0.041" z="0.050" >
        <origin xyz="-0.00022 0.00223 0.00708" />
      </xacro:solid_cuboid_inertial>
      <visual>
        <geometry>
          <mesh filename="package://pandora_sensors_description/meshes/laser/pitch_servo_motor.dae" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="-0.00149 0.0 0.0093"
                rpy="0 0 0" />
        <geometry>
          <box size="0.035 0.041 0.050" />
        </geometry>
      </collision>
    </link>

    <link name="laser_main_link" >
      <xacro:solid_cuboid_inertial mass="0.160" x="0.048" y="0.051" z="0.080" >
        <origin xyz="0.00041 -0.00007 0.04539" />
      </xacro:solid_cuboid_inertial>
      <visual>
        <geometry>
          <mesh filename="package://pandora_sensors_description/meshes/laser/hokuyo_urg_04lx.dae" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0.00078 -0.0001 0.04595"
                rpy="0 0 0" />
        <geometry>
          <box size="0.048 0.051 0.114" />
        </geometry>
      </collision>
    </link>

    <link name="laser_link" >
      <xacro:point_mass_inertial />
    </link>
    
    <!-- Joints ########################################################### -->
    
    <joint name="laser_servo_base_joint"
           type="fixed" >
      <parent link="${parent}" />
      <child link="laser_roll_servo_link" />
      <xacro:insert_block name="origin" />
    </joint>

    <xacro:if value="${fixed}" >
      <joint name="laser_roll_joint"
             type="fixed" >
        <parent link="laser_roll_servo_link" />
        <child link="laser_pitch_servo_link" />
        <origin xyz="0.03999 0.0 0.0" 
                rpy="0 0 0" />
      </joint>

      <joint name="laser_pitch_joint"
             type="fixed" >
        <parent link="laser_pitch_servo_link" />
        <child link="laser_main_link" />
        <origin xyz="0.0 0.0 0.02276" 
                rpy="0 0 0" />
      </joint>
    </xacro:if>

    <xacro:unless value="${fixed}" >
      <joint name="laser_roll_joint"
             type="revolute" >
        <parent link="laser_roll_servo_link" />
        <child link="laser_pitch_servo_link" />
        <origin xyz="0.03999 0.0 0.0" 
                rpy="0 0 0" />
        <axis xyz="1 0 0" />
        <limit lower="${roll_min_limit}"
               upper="${roll_max_limit}"
               effort="50"
               velocity="50.0" />
      </joint>

      <joint name="laser_pitch_joint"
             type="revolute" >
        <parent link="laser_pitch_servo_link" />
        <child link="laser_main_link" />
        <origin xyz="0.0 0.0 0.02276" 
                rpy="0 0 0" />
        <axis xyz="0 1 0" />
        <limit lower="${pitch_min_limit}"
               upper="${pitch_max_limit}"
               effort="50"
               velocity="50.0" />
      </joint>
    </xacro:unless>
    
    <joint name="laser_joint"
           type="fixed" >
      <parent link="laser_main_link" />
      <child link="laser_link" />
      <origin xyz="0.0 0.0 0.089" 
              rpy="0 0 0" />
    </joint>

  </xacro:macro>

</robot>
