<?xml version="1.0" ?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" >

  <xacro:macro name="thermal_caster"
               params="parent prefix_y *origin" >

    <link name="${prefix_y}_thermal_link" >

      <inertial>
        <origin xyz="0 0 0.186"
                rpy="0 0 0" />
        <mass value="0.1" />
        <inertia ixx="1.0"
                 ixy="0.0"
                 ixz="0.0"
                 iyy="1.0"
                 iyz="0.0"
                 izz="1.0" />
      </inertial>

      <visual name="visual" >
        <geometry>
          <mesh filename="package://pandora_sensors_description/meshes/thermal_sensor/thermal_small.dae" />
        </geometry>
      </visual>

      <collision name="collision" >
        <geometry>
          <box size="0.01 0.01 0.01" />
        </geometry>
      </collision>

    </link>

    <gazebo reference="${prefix_y}_thermal_link" >
      <sensor name="thermal"
              type="camera" >

        <camera>

          <horizontal_fov>0.8</horizontal_fov>

          <image>
            <width>640</width>
            <height>480</height>
          </image>

          <clip>
            <near>0.05</near>
            <far>1.5</far>
          </clip>

        </camera>

        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>false</visualize>

        <plugin name="thermal2ros"
                filename="libpandora_thermal_plugin.so" >

          <frameName>thermal_link</frameName>
          <topicName>sensors/thermal</topicName>

        </plugin>

      </sensor>

    </gazebo>

    <joint name="${prefix_y}_thermal_joint"
           type="fixed" >

      <parent link="${parent}" />
      <child link="${prefix_y}_thermal_link" />

      <xacro:insert_block name="origin" />

    </joint>

  </xacro:macro>

</robot>
