<?xml version="1.0" ?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" >

<!-- ###################################################################### -->

  <xacro:macro name="sonar_caster"
               params="parent prefix_y *origin" >

    <!-- ################################################################## -->

    <link name="${prefix_y}_sonar_link" >

      <inertial>
        <!-- ============================================================== -->
        <origin xyz="0.005 0.0 0.0" />
        <!-- ============================================================== -->
        <mass value="0.010" />
        <!-- ============================================================== -->
        <inertia ixx="4.2416E-7"
                 ixy="0.0"
                 ixz="0.0"
                 iyy="2.0166E-6"
                 iyz="0.0"
                 izz="1.6341E-6" />
        <!-- ============================================================== -->
      </inertial>

      <visual>
        <!-- ============================================================== -->
        <origin xyz="0 0 0"
                rpy="0 0 0" />
        <!-- ============================================================== -->
        <geometry>
          <mesh filename="package://pandora_sensors_description/meshes/sonar/max_ez4.dae" />
        </geometry>
        <!-- ============================================================== -->
      </visual>

      <collision>
        <!-- ============================================================== -->
        <origin xyz="0.0075 0.0 0.0"
                rpy="0 0 0" />
        <!-- ============================================================== -->
        <geometry>
          <box size="0.015 0.044 0.022" />
        </geometry>
        <!-- ============================================================== -->
      </collision>

    </link>

    <!-- ################################################################## -->

    <link name="${prefix_y}_sonar_frame" >

      <inertial>
        <!-- ============================================================== -->
        <origin xyz="0.0 0.0 0.0" />
        <!-- ============================================================== -->
        <mass value="0.0001" />
        <!-- ============================================================== -->
        <inertia ixx="0.00000001"
                 ixy="0"
                 ixz="0"
                 iyy="0.00000001"
                 iyz="0"
                 izz="0.00000001" />
        <!-- ============================================================== -->
      </inertial>

    </link>

    <!-- ################################################################## -->

    <joint name="${prefix_y}_sonar_main_joint"
           type="fixed" >

      <!-- ================================================================ -->
      <parent link="${parent}" />
      <child link="${prefix_y}_sonar_link" />
      <!-- ================================================================ -->
      <xacro:insert_block name="origin" />
      <!-- ================================================================ -->

    </joint>

    <!-- ################################################################## -->

    <joint name="${prefix_y}_sonar_joint"
           type="fixed" >

      <!-- ================================================================ -->
      <parent link="${prefix_y}_sonar_link" />
      <child link="${prefix_y}_sonar_frame" />
      <!-- ================================================================ -->
      <origin xyz="0.015 0.0 0.0" 
              rpy="0.0 0.0 0.0" />
      <!-- ================================================================ -->

    </joint>

    <!-- ################################################################## -->

  </xacro:macro>

<!-- ###################################################################### -->

</robot>
